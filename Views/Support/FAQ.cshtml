@{
    ViewData["Title"] = "FAQs";
}

<h2 class="text-primary mb-3">Frequently Asked Questions</h2>

<div class="accordion" id="faq">
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button" data-bs-toggle="collapse" data-bs-target="#q1">
                Who can be assessed using CAT-AID?
            </button>
        </h2>
        <div id="q1" class="accordion-collapse collapse show">
            <div class="accordion-body">
                Adults with Intellectual Disabilities aged 18 years and above.
            </div>
        </div>
    </div>

    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed" data-bs-toggle="collapse" data-bs-target="#q2">
                How long does assessment take?
            </button>
        </h2>
        <div id="q2" class="accordion-collapse collapse">
            <div class="accordion-body">
                Approximately 35–50 minutes for Part-A.
            </div>
        </div>
    </div>
</div>
