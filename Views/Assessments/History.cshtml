@using CAT.AID.Models
@model IEnumerable<CAT.AID.Models.Assessment>

<h2 class="mb-3 text-primary fw-bold">📚 Assessment History</h2>

<style>
    .glass-box {
        background: rgba(255, 255, 255, 0.55);
        backdrop-filter: blur(10px);
        border-radius: 16px;
        padding: 18px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }

    .table-3d {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 6px 20px rgba(0,0,0,0.2);
    }

        .table-3d thead {
            background: linear-gradient(135deg, #003366, #0066aa);
            color: #fff;
            font-weight: 700;
        }

        .table-3d tbody tr {
            transition: 0.25s ease;
        }

            .table-3d tbody tr:hover {
                background: #eef5ff !important;
                transform: scale(1.01);
            }

    .badge-status {
        padding: 6px 10px;
        border-radius: 8px;
        font-weight: 600;
        display: inline-block;
    }

    .badge-submitted {
        background: #cce5ff;
        color: #004085;
    }

    .badge-review {
        background: #fff3cd;
        color: #856404;
    }

    .badge-approved {
        background: #d4edda;
        color: #155724;
    }

    .badge-assigned {
        background: #e2e3e5;
        color: #383d41;
    }
</style>

<div class="glass-box mt-3">

    <table class="table table-striped table-3d table-sm">
        <thead>
            <tr>
                <th>Status</th>
                <th>Submitted</th>
                <th>Reviewed</th>
                <th>Approved</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var h in Model)
            {
                string badgeClass = h.Status switch
                {
                    AssessmentStatus.Submitted => "badge-submitted",
                   // AssessmentStatus.Reviewed => "badge-review",
                    AssessmentStatus.Approved => "badge-approved",
                    AssessmentStatus.Assigned => "badge-assigned",
                    _ => "badge-assigned"
                };

                <tr>
                    <td>
                        <span class="badge-status @badgeClass">@h.Status</span>
                    </td>

                    <td>
                        @(h.SubmittedAt?.ToString("dd-MMM-yyyy hh:mm tt") ?? "—")
                    </td>

                    <td>
                        @(h.ReviewedAt?.ToString("dd-MMM-yyyy hh:mm tt") ?? "—")
                    </td>

                    <td>
                        @(h.ApprovedAt?.ToString("dd-MMM-yyyy hh:mm tt") ?? "—")
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

<a href="/Candidates" class="btn btn-secondary mt-3">⬅ Back</a>
