@using CAT.AID.Models
@using CAT.AID.Models.DTO       
@model Assessment

@{
    var sections = ViewBag.Sections as List<AssessmentSection>;

    var saved = string.IsNullOrWhiteSpace(Model.AssessmentResultJson)
        ? new Dictionary<string, string>()
        : System.Text.Json.JsonSerializer.Deserialize<Dictionary<string, string>>(Model.AssessmentResultJson);

    bool editable = Model.IsEditableByAssessor;
}

<!-- ============================================================
     PAGE TITLE
============================================================ -->
<h3 class="fw-bold mb-4" style="color:#003366;">
    üìù Assessment ‚Äî @Model.Candidate.FullName
</h3>

<!-- ============================================================
     PAGE STYLES
============================================================ -->
<style>

    /* ---------- Layout ---------- */
    .glass-panel {
        background: rgba(255, 255, 255, 0.75);
        backdrop-filter: blur(12px);
        border-radius: 16px;
        padding: 20px;
        box-shadow: 0 10px 35px rgba(0, 0, 0, 0.12);
        animation: fadeIn 0.4s ease;
    }

    .question-card {
        border: 1px solid #c6d4ec;
        background: #f7faff;
        padding: 18px;
        border-radius: 12px;
        margin-bottom: 15px;
        transition: 0.25s ease;
    }

    .question-card:hover {
        background: #ffffff;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.15);
        transform: scale(1.01);
    }

    .question-header {
        font-size: 16px;
        font-weight: 700;
        color: #003366;
        margin-bottom: 10px;
    }

    /* ---------- Buttons ---------- */
    .btn-save {
        background: #ffd84d;
        color: #003366;
        font-weight: 600;
        border-radius: 6px;
        padding: 8px 20px;
    }

    .btn-submit {
        background: #003366;
        color: white;
        font-weight: 600;
        border-radius: 6px;
        padding: 8px 20px;
    }

    .btn-submit:hover {
        background: #00224d;
    }

    /* ---------- Evidence Preview ---------- */
    .evidence-box {
        display: inline-block;
        width: 90px;
        text-align: center;
        margin-right: 10px;
    }

    .evidence-box img {
        width: 60px;
        height: 60px;
        object-fit: cover;
    }

    /* ---------- Animation ---------- */
    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    /* ---------- Sticky Tabs ---------- */
    .sticky-tabs {
        position: sticky;
        top: 75px;
        background: white;
        z-index: 50;
    }

</style>

<!-- ============================================================
     FORM
============================================================ -->
<form asp-action="Perform" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">

    <!-- TAB NAVIGATION -->
    <div class="sticky-tabs mb-3">
        <ul class="nav nav-tabs">

            @for (int i = 0; i < sections.Count; i++)
            {
                <li class="nav-item">
                    <button class="nav-link @(i == 0 ? "active" : "")"
                            data-bs-toggle="tab"
                            data-bs-target="#tab-@i">
                        @sections[i].Category
                    </button>
                </li>
            }

            <li class="nav-item">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-summary">
                    Summary
                </button>
            </li>

        </ul>
    </div>

    <!-- ============================================================
         TAB CONTENT WRAPPER
    ============================================================ -->
    <div class="tab-content glass-panel">

        <!-- ============================================================
             QUESTION TABS
        ============================================================ -->
        @for (int i = 0; i < sections.Count; i++)
        {
            var sec = sections[i];

            <div class="tab-pane fade @(i == 0 ? "show active" : "")" id="tab-@i">

                @foreach (var q in sec.Questions)
                {
                    string qId = q.Id.ToString();

                    var ansKey = $"ANS_{qId}";
                    var scrKey = $"SCORE_{qId}";
                    var cmtKey = $"CMT_{qId}";
                    var savedFiles = saved.Where(x => x.Key.StartsWith($"FILE_{qId}_"))
                                          .Select(x => x.Value)
                                          .ToList();

                    saved.TryGetValue(ansKey, out string savedAns);
                    saved.TryGetValue(scrKey, out string savedScore);
                    saved.TryGetValue(cmtKey, out string savedCmt);

                    <div class="question-card">
                        <div class="question-header">@q.Text</div>

                        <!-- Answer Dropdown -->
                        <select name="@ansKey"
                                class="form-select mb-2 response-dropdown"
                                data-id="@qId"
                                @(editable ? "" : "disabled")>

                            <option value="">-- select --</option>
                            <option value="0" selected="@(savedAns == "0")">Dependent</option>
                            <option value="1" selected="@(savedAns == "1")">Physical Prompt</option>
                            <option value="2" selected="@(savedAns == "2")">Verbal Prompt</option>
                            <option value="3" selected="@(savedAns == "3")">Independent</option>
                        </select>

                        <!-- Score -->
                        <input type="hidden" name="@scrKey" id="score_@qId"
                               value="@(savedScore ?? "0")"
                               class="score-input" />

                        <!-- Comments -->
                        <textarea name="@cmtKey" rows="2" class="form-control mb-2"
                                  placeholder="Comments..."
                                  @(editable ? "" : "readonly")>@savedCmt</textarea>

                        <!-- Evidence Upload -->
                        <label class="fw-semibold">üìé Upload Evidence</label>
                        <input type="file"
                               name="FILE_UPLOAD_@qId"
                               class="form-control mb-2"
                               multiple
                               @(editable ? "" : "disabled") />

                        <!-- Existing Evidence -->
                        @if (savedFiles.Any())
                        {
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var f in savedFiles)
                                {
                                    <div class="evidence-box">
                                        <a href="/uploads/@f" target="_blank">
                                            <img src="/images/doc-icon.png" />
                                        </a>
                                        <div class="small">View</div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
            </div>
        }

        <!-- ============================================================
             SUMMARY TAB
        ============================================================ -->
        <div class="tab-pane fade" id="tab-summary">

            <label class="fw-bold">Overall Summary</label>
            <textarea name="SUMMARY_COMMENTS" rows="3" class="form-control mb-3"
                      @(editable ? "" : "readonly")>
                @(saved.ContainsKey("SUMMARY_COMMENTS") ? saved["SUMMARY_COMMENTS"] : "")
            </textarea>

            <label class="fw-bold">üìé Upload Final Evidence</label>
            <input type="file" name="LEAD_FILES" class="form-control mb-2" />

            @if (saved.ContainsKey("LEAD_FILES"))
            {
                <a href="/uploads/@saved["LEAD_FILES"]" target="_blank" class="btn btn-outline-primary btn-sm">
                    View Final Evidence
                </a>
            }

            <!-- Live Score -->
            <div class="alert alert-info mt-3 fw-bold">
                Total Score: <span id="totalScore"></span> /
                <span id="maxScore"></span> |
                <span id="percentScore"></span>
            </div>

        </div>

    </div>

    <!-- ============================================================
         BUTTONS
    ============================================================ -->
    <div class="text-end mt-3">
        @if (editable)
        {
            <button class="btn btn-save me-2" name="actionType" value="save">üíæ Save</button>
            <button class="btn btn-submit" name="actionType" value="submit">üì§ Submit</button>
        }
        else
        {
            <button class="btn btn-secondary" disabled>Assessment Locked</button>
        }
    </div>

</form>

<!-- ============================================================
     SCRIPTS
============================================================ -->
<script>
    document.addEventListener("change", function(e) {
        if (e.target.classList.contains("response-dropdown")) {
            let id = e.target.getAttribute("data-id");
            document.getElementById("score_" + id).value = e.target.value;
            computeTotals();
        }
    });

    document.addEventListener("DOMContentLoaded", computeTotals);

    function computeTotals() {
        let total = 0;
        let max = document.querySelectorAll(".score-input").length * 3;

        document.querySelectorAll(".score-input").forEach(i => {
            let v = Number(i.value);
            if (!isNaN(v)) total += v;
        });

        document.getElementById("totalScore").textContent = total;
        document.getElementById("maxScore").textContent = max;
        document.getElementById("percentScore").textContent =
            ((total / max) * 100).toFixed(1) + "%";
    }
</script>


