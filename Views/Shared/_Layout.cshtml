@using Microsoft.AspNetCore.Identity
@using CAT.AID.Web.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>CVAT ‚Äì Comprehensive Vocational Assessment Tool</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

    <style>
        :root {
            --navy: #0b3c5d;
            --brown: #6b4f1d;
            --sand: #f3ead7;
            --bg: #f8f9fb;
            --text: #2e2e2e;
        }

        body {
            font-family: 'Segoe UI', sans-serif;
            background: var(--bg);
            color: var(--text);
        }

        /* ================= HEADER ================= */
        .brand-header {
            background: white;
            padding: 20px 0;
            border-bottom: 3px solid var(--navy);
        }

        .brand-title {
            font-size: 26px;
            font-weight: 800;
            color: var(--navy);
        }

        .brand-sub {
            font-size: 14px;
            color: var(--brown);
            font-weight: 500;
        }

        .header-logo {
            height: 80px;
        }

        /* ================= NAVBAR ================= */
        .navbar {
            background: linear-gradient(90deg, var(--navy), var(--brown));
            padding: 12px;
        }

        .navbar .nav-link {
            color: #fff !important;
            font-weight: 600;
            padding: 8px 14px;
            border-radius: 8px;
        }

        .navbar .nav-link:hover {
            background: rgba(255,255,255,0.2);
        }

        .dropdown-menu {
            background: #fff;
            border: 1px solid #ddd;
        }

        .dropdown-item {
            color: var(--navy);
            font-weight: 500;
        }

        .dropdown-item:hover {
            background: var(--sand);
        }

        /* ================= CONTENT ================= */
        .content-wrapper {
            margin-top: 30px;
            margin-bottom: 40px;
        }

        .assessment-card {
            background: white;
            border-radius: 18px;
            padding: 28px;
            box-shadow: 0 6px 18px rgba(0,0,0,0.08);
        }

        h1, h2, h3, h4 {
            color: var(--navy);
            font-weight: 700;
        }

        p {
            font-size: 16px;
            line-height: 1.6;
        }

        /* ================= FOOTER ================= */
        .footer {
            background: var(--sand);
            color: var(--navy);
            padding: 25px;
            text-align: center;
            font-size: 14px;
            border-top: 2px solid var(--brown);
        }
    </style>
</head>

<body>

    <!-- HEADER -->
    <div class="brand-header">
        <div class="container d-flex justify-content-between align-items-center">

            <img src="/Images/20240912282747915.png" class="header-logo" />

            <div class="text-center">
                <div class="brand-title">
                    CVAT ‚Äì Comprehensive Vocational Assessment Tool
                </div>
                <div class="brand-sub">
                    Supporting Abilities ‚Ä¢ Building Independence ‚Ä¢ Enabling Dignity
                </div>
            </div>

            <img src="/Images/202409121913074416.png" class="header-logo" />
        </div>
    </div>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">

            <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">

                <ul class="navbar-nav me-auto gap-2">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link" href="/Admin/Users">üìö Users</a></li>
                        }
                        @if (User.IsInRole("LeadAssessor"))
                        {
                            <li class="nav-item"><a class="nav-link" href="/Candidates">üë§ Candidates</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Assessments/ReviewQueue">üìù Review Queue</a></li>
                        }
                        @if (User.IsInRole("Assessor"))
                        {
                            <li class="nav-item"><a class="nav-link" href="/Assessments/MyTasks">üìå My Assessments</a></li>
                        }
                    }
                </ul>

                <ul class="navbar-nav ms-auto">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                                üë§ @User.Identity?.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        @Html.AntiForgeryToken()
                                        <button class="dropdown-item fw-bold">
                                            üîì Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>

    <!-- CONTENT -->
    <div class="container content-wrapper">
        <div class="assessment-card">
            @RenderBody()
        </div>
    </div>

    <!-- FOOTER -->
    <div class="footer">
        ¬© @DateTime.Now.Year  
        <strong>NATIONAL INSTITUTE FOR THE EMPOWERMENT OF PERSONS WITH INTELLECTUAL DISABILITIES (NIEPID)</strong><br />
        Manovikas Nagar, Secunderabad, Telangana ‚Äì 500009
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
