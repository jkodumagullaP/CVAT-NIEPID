@model CAT.AID.Web.Models.ApplicationUser
@{
    ViewData["Title"] = "Create User";
}

<h2 class="mt-3 fw-bold" style="color:#003366;">➕ Create New User</h2>

<style>
    .glass-box {
        background: rgba(255,255,255,0.75);
        border-radius: 14px;
        padding: 25px;
        border: 1px solid #d5e1f3;
        box-shadow: 0 4px 16px rgba(0,0,0,0.12);
        backdrop-filter: blur(10px);
    }

    .form-label {
        font-weight: 600;
        color: #003366;
    }

    .btn-navy {
        background: #003366;
        color: #fff;
        font-weight: 600;
        border-radius: 6px;
    }
    .btn-navy:hover {
        background: #00254d;
        color: #fff;
    }
</style>

<div class="glass-box mt-4">

    <form asp-action="Create" asp-controller="Admin" method="post">

        <div asp-validation-summary="All" class="text-danger fw-bold mb-3"></div>

        <!-- FULL NAME -->
        <div class="mb-3">
            <label class="form-label">👤 Full Name</label>
            <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
            <span asp-validation-for="FullName" class="text-danger small"></span>
        </div>

        <!-- EMAIL -->
        <div class="mb-3">
            <label class="form-label">📧 Email</label>
            <input asp-for="Email" class="form-control" placeholder="Enter email" />
            <span asp-validation-for="Email" class="text-danger small"></span>
        </div>

        <!-- PASSWORD -->
        <div class="mb-3">
            <label class="form-label">🔒 Password</label>
            <input type="password" name="password" class="form-control" placeholder="Enter password" />
        </div>

        <!-- ROLE -->
        <div class="mb-3">
            <label class="form-label">🛂 Select Role</label>
            <select name="role" class="form-select">
                <option value="Admin">Admin</option>
                <option value="LeadAssessor">Lead Assessor</option>
                <option value="Assessor">Assessor</option>
            </select>
        </div>

        <!-- LOCATION -->
        <div class="mb-3">
            <label class="form-label">📍 Location (optional)</label>
            <input asp-for="Location" class="form-control" placeholder="Enter location" />
        </div>

        <!-- BUTTONS -->
        <div class="text-end mt-4">
            <button class="btn btn-navy px-4 me-2">💾 Create</button>
            <a href="/Admin/Users" class="btn btn-secondary px-4">Cancel</a>
        </div>

    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
